/* pages/login/index.wxss */
.login {
    padding: 30rpx;
}

.form-item .input {}

.header {
    display: flex;
    justify-content: center;
    align-items: center;
}

.header image {
    width: 288rpx;
    height: 176rpx;
}

.form-item {
    /* position: absolute; */
    left: 0;
    top: 0;
    width: 614rpx;
    height: 98rpx;
    border-radius: 49rpx;

    opacity: 1;

    background: #FFFFFF;

    border: 2rpx dashed rgba(232, 232, 232, 0.86);

    box-shadow: 0rpx 0rpx 4rpx -8rpx rgba(0, 0, 0, 0.1);

    display: flex;

    align-items: center;

    padding: 0 30rpx;

    margin-bottom: 48rpx;
}

.form-item image {
    width: 32rpx;
    height: 32rpx;
    margin-right: 32rpx;
}

.login-btn {
    /* position: absolute; */
    left: 0px;
    top: 0px;
    width: 614rpx;
    height: 96rpx;
    border-radius: 48rpx;
    opacity: 1;

    background: linear-gradient(90deg, rgba(193, 239, 245, 0.90) 0%, #0AE8F0 0%, #88F2DF 100%);

    box-shadow: 0px 0px 12rpx 0px rgba(0, 0, 0, 0.1);

    color: #fff;

    line-height: 96rpx;
}